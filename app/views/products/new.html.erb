<%= react_component('ProductForm', authenticity_token: form_authenticity_token) %>

<div id="loading">
Loading...
</div>
<script>
$(document).ready(function () {
  $("#loading").hide();
  $(document).ajaxStart(function () {
      $("#loading").show();
  }).ajaxStop(function () {
      $("#loading").hide();
  });
});
</script>
